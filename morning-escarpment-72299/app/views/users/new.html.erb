<h1>Criar Usuário</h1>

<div	class="row">
		<div	class="col-md-6	col-md-offset-3">
				<%=	form_for(@user)	do |f| %>
				  <%= render 'shared/error_messages' %>
						<%=	f.label	:name, "Nome"	%>
						<%=	f.text_field	:name	%>
						<%=	f.label	:email	%>
						<%=	f.email_field	:email	%>
						<%=	f.label	:password	%>
						<%=	f.password_field	:password	%>
						<%=	f.label	:password_confirmation,	"Confirmação"	%>
						<%=	f.password_field	:password_confirmation	%>
						<%=	f.submit	"Criar Conta",	class:	"btn	btn-primary"	%>
				<%	end		%>
		</div>
</div>

